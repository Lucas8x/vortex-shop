{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true,
    "browser": false,
    "mongo": true
  },
  "extends": ["airbnb-base"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018
  },
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": ["error"],
    "linebreak-style": ["error", "unix"],
    "no-console": "off",
    "comma-dangle": "off",
    "consistent-return": "off",
    "no-unused-vars": "warn",
    "no-underscore-dangle": "off"
  }
}